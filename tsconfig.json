{
    "compilerOptions": {
        "target": "es2022",
        "module": "system",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "paths": {
            "@application/*": ["./src/application/*"],
            "@domain/*": ["./src/domain/*"],
            "@infrastructure/*": ["./src/infrastructure/*"],
            "@useCases/*": ["./src/application/useCases/*"],
            "@entities/*": ["./src/domain/entities/*"],
            "@domainErrors/*": ["./src/domain/domainErrors/*"],
            "@models/*": ["./src/domain/models/*"],
            "@secondaryPorts/*": ["./src/application/ports/secondaryPorts/*"],
            "@primaryPorts/*": ["./src/application/ports/primaryPorts/*"],
            "@drivingAdapters/*": ["./src/infrastructure/driving/adapters/*"],
            "@drivenAdapters/*": ["./src/infrastructure/driven/adapters/*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "exclude": [
        "node_modules"
    ]
}