{
    "compilerOptions": {
        "target": "es2022",
        "module": "system",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "paths": {
            "@application/*": ["./src/application/*"],
            "@domain/*": ["./src/domain/*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "exclude": [
        "node_modules"
    ]
}